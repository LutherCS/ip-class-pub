                                    <select name="category" id="selCat">
                                        <!-- TODO: Populate category options -->
                                    </select>
                                </div>
                            </div>
                            <div id="fieldNumber">
                                <label>Number</label>
                                <div>
                                    <select name="number" id="selNum">
                                        <!-- TODO: Populate number options -->
                                    </select>
                                </div>
                            </div>
                            <div>
