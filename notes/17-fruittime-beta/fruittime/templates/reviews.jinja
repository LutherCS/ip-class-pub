{% extends 'index.jinja' %}
{% block content%}
{% if config["REVIEWS"] | length > 0 %}
{% for review in config["REVIEWS"] %}
<div class="card">
    <header class="card-header has-background-{{ config['COLORS'][review['rating']]}}">
        <p class="card-header-title">{{ review.name }}</p>
        <button class="card-header-icon" aria-label="delete">
            <span class="delete icon">
            </span>
        </button>
    </header>
    <div class="card-content has-background-{{ config['COLORS'][review['rating']]}}-soft">{{ review.opinion }}</div>
    <footer class="card-footer has-background-{{ config['COLORS'][review['rating']]}}">
        <p class="card-footer-item">Calories: {{ review['nutrition']['calories']}}</p>
        <p class="card-footer-item">Carbs: {{ review['nutrition']['carbs']}}</p>
        <p class="card-footer-item">Fat: {{ review['nutrition']['fat']}}</p>
        <p class="card-footer-item">Protein: {{ review['nutrition']['protein']}}</p>
        <p class="card-footer-item">Sugar: {{ review['nutrition']['sugar']}}</p>
    </footer>
</div>
{% endfor %}
{% else %}
<p>Post your first review</p>
{% endif %}
{% endblock content%}